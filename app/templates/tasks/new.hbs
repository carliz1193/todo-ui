<div class="container">
	<h1>New Task</h1>

	<div class="row">
		<div class="col-md-12">
			<form {{action 'createTask' on="submit" }}>

				<div class="form-group">
					<label>Title</label>
					{{input value=model.title class="form-control"}}
					{{max-lenght contar=model.title.length limite=20 noticeCount=10}}
				</div>

				<div class="form-group">
					<label>Due date</label>
					{{date-picker value=model.due_date class="form-control"}}
				</div>

				<div class="form-group">
					<label>Description</label>
					{{textarea value=model.description class="form-control"}}
					{{max-lenght contar=model.description.length limite=100 noticeCount=10}}
				</div>

				<button type="submit" class="btn btn-default">Create</button>
			</form>
		</div>
	</div>
</div>




<div id="validationModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">No se pudo guardar</h4>
      </div>
      <div class="modal-body">
        <p>Hay campos vac√≠os, debes llenar todo antes de guardar</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Aceptar</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

